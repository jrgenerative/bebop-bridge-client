{
  "name": "drone-app",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/jrgenerative"
  },
  "scripts": {
    "clean:dist": "rimraf ./dist/**/*",
    "docker:pack": "docker build -f Dockerfile.Default -t jrgenerative/bebop-bridge-client:latest .",
    "docker:pack:pi": "docker build -f Dockerfile.Rpi -t jrgenerative/bebop-bridge-client-pi:latest .",
    "docker:run": "docker run --name bridge-client -p 8080:8080 jrgenerative/bebop-bridge-client",
    "docker:push": "docker push jrgenerative/bebop-bridge-client:latest",
    "docker:push:pi": "docker push jrgenerative/bebop-bridge-client-pi:latest",
    "license-build": "concurrently \"license-checker --json --out src/assets/licenses/prod.json --production\" \"license-checker --json --out src/assets/licenses/dev.json --development\"",
    "tslint": "tslint \"./src/app/**/*.ts\" -c \"./tasks/tslint.json\" -t verbose --project \"./tsconfig.json\"",
    "tslint:w": "nodemon --watch src/app -e ts --exec \"npm run tslint --silent\"",
    "build:dev": "npm run clean:dist && npm run tslint && webpack --config ./config/webpack.config.dev.js",
    "build:prod": "npm run clean:dist && npm run tslint && webpack --config ./config/webpack.config.prod.js",
    "build:docker": "npm run build:prod && npm run docker:pack",
    "build:docker:pi": "npm run build:prod && npm run docker:pack:pi",
    "deploy:docker": "npm run build:docker && npm run docker:push",
    "deploy:docker:pi": "npm run build:docker:pi && npm run docker:push:pi",
    "sass": "node-sass ./src/app/ -r -o ./dist/assets/css",
    "server:dev": "webpack-dev-server --config config/webpack.config.dev.js --progress --profile --watch --content-base src/",
    "server:prod": "http-server dist -c-1 --cors",
    "start": "npm run server:prod"
  },
  "dependencies": {
    "http-server": "^0.9.0"
  },
  "devDependencies": {
    "@angular/common": "~2.4.1",
    "@angular/compiler": "~2.4.1",
    "@angular/compiler-cli": "~2.4.1",
    "@angular/core": "~2.4.1",
    "@angular/forms": "~2.4.1",
    "@angular/http": "~2.4.1",
    "@angular/platform-browser": "~2.4.1",
    "@angular/platform-browser-dynamic": "~2.4.1",
    "@angular/platform-server": "~2.4.1",
    "@angular/router": "~3.4.1",
    "@angular/upgrade": "^2.4.1",
    "@types/geolib": "^2.0.0",
